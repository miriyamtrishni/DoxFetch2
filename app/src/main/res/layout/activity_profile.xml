<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="#0C3B2E"
    android:orientation="vertical"
    android:padding="20dp"
    android:paddingTop="10dp"
    android:weightSum="10"
    tools:context=".Profile">

    <ImageButton
        android:id="@+id/imageButton22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:backgroundTint="#8C3131"
        app:srcCompat="@android:drawable/ic_popup_reminder" />

    <Button
        android:id="@+id/button52"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:backgroundTint="#AF5151"
        android:text="@string/home" />

    <ImageButton
        android:id="@+id/imageButton53"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:backgroundTint="#8B3131"
        app:srcCompat="@android:drawable/ic_menu_myplaces" />

    <LinearLayout
        android:layout_width="373dp"
        android:layout_height="174dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:textAlignment="center"
            app:srcCompat="@drawable/profile" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/samson_gomes"
            android:textAlignment="center"
            android:textColor="#FDFDFD"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/id44"
            android:textAlignment="center"
            android:textColor="#FDFDFD"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="556dp"
        android:layout_marginLeft="8dp"

        android:layout_marginBottom="20dp"


        android:layout_weight="1"
        android:background="@drawable/roundedcornergreen"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="333dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:text="@string/user_profile"
                android:textAlignment="center"
                android:textColor="#FFBA00"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="452dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="223dp"
                android:layout_height="142dp"
                android:layout_weight="2"
                android:background="@drawable/roundedcorner"
                android:fontFamily="serif-monospace"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:text="@string/info"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="93dp"
                android:layout_height="137dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/app_data_cuate" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="10dp">


            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="148dp"
                android:layout_height="145dp"
                android:layout_weight="1"
                android:paddingTop="20dp"
                app:srcCompat="@drawable/progress_overview_pana" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="159dp"
                android:layout_height="180dp"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="165dp"
                    android:layout_height="147dp"
                    android:layout_weight="2"
                    android:background="@drawable/rounded3"
                    android:paddingLeft="20dp"
                    android:paddingTop="30dp"
                    android:text="@string/progress"
                    android:textColor="#0C3B2E"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.52"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.03" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40%"
                    android:textColor="#FFFFFF"
                    android:textSize="48sp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView21"
                    app:layout_constraintEnd_toEndOf="@+id/textView21"
                    app:layout_constraintHorizontal_bias="0.436"
                    app:layout_constraintStart_toStartOf="@+id/textView21"
                    app:layout_constraintTop_toTopOf="@+id/textView21"
                    app:layout_constraintVertical_bias="0.813" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="161dp"
        android:layout_weight="3"
        android:background="#6D9573"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#8C3131"
            app:srcCompat="@android:drawable/ic_popup_reminder" />

        <Button
            android:id="@+id/button32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#8B3131"
            android:text="@string/home" />

        <ImageButton
            android:id="@+id/imageButton30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#AE5151"
            app:srcCompat="@android:drawable/ic_menu_myplaces" />

    </LinearLayout>

</LinearLayout>